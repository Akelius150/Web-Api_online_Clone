@{
    ViewData["Title"] = "Registrated users";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h1 class="display-4">Registrated users</h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="RegistratedUsers" class="table table-striped table-centered mb-0">
                        <thead>
                            <tr class="table-primary">
                                <th>№</th>
                                <th>Email</th>
                                <th>Registration Date(UTC)</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RegisteredUsers)
                            {
                                <tr>
                                    <td>
                                        @item.Number
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    if(@item.RegistrationDate != null)
                                    {
                                        <td>
                                            @item.RegistrationDate.ToString("yyyy-MM-dd HH:mm:ss")
                                        </td>
                                    }
                                    else if(@item.Created != null)
                                    {
                                        <td>
                                            @item.Created.ToString("yyyy-MM-dd HH:mm:ss")
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>