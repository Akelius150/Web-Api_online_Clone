@{
    ViewData["Title"] = "Outcome transactions";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h1 class="display-4">Outcome transactions</h1>
        </div>
    </div>
</div>

<div class="row">

    <table id="WithdrawTransactionRepository" class="table table-striped table-centered mb-0">
        <thead>
            <tr class="table-primary">
                <th>Create Date</th>
                <th>From Wallet Id</th>
                <th>To Address</th>
                <th>Value</th>
                <th>Currency Acronim</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OutcomeTransactions)
            {
                <tr>
                    <td>
                        @item.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")
                    </td>
                    <td>
                        @item.FromWalletId
                    </td>
                    <td>
                        @item.ToAddress
                    </td>
                    <td>
                        <span class="decimal-data">@item.Value</span>
                    </td>
                    <td>
                        @item.CurrencyAcronim
                    </td>
                    <td>
                        @item.State
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script src="/js/vendor/jquery.dataTables.min.js"></script>
<script src="/js/vendor/dataTables.bootstrap5.js"></script>
<script src="/js/vendor/dataTables.responsive.min.js"></script>
<script src="/js/vendor/responsive.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#WithdrawTransactionRepository').DataTable({
            "pageLength": 500,
            "paging": false,
            "language": {
                "info": "Showing _START_ to _END_ of _TOTAL_ pairs"
            },
            "dom": "frtip"
        });
    });
</script>