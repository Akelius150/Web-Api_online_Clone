@{
    ViewData["Title"] = "Outcome transactions";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h1 class="display-4">Outcome transactions</h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="WithdrawTransactionRepository" class="table table-striped table-centered mb-0" style="font-size: 0.7rem !important;">
                        <thead>
                            <tr class="table-primary">
                                <th>Date(UTC)</th>
                                <th>Currency</th>
                                <th>Value</th>
                                <th>Fee</th>
                                <th>From Wallet Id</th>
                                <th>To Address</th>
                                <th>Transaction Hash</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OutcomeTransactions)
                            {
                                <tr>
                                    <td style="white-space: nowrap;">
                                        @item.CreateDate.ToString("yyyy-MM-dd HH:mm:ss")
                                    </td>
                                    <td>
                                        @item.CurrencyAcronim
                                    </td>
                                    <td>
                                        <span class="decimal-data">@item.Value</span>
                                    </td>
                                    <td>
                                        @item.BlockchainCommission
                                    </td>
                                    <td>
                                        @item.FromWalletId
                                    </td>
                                    <td>
                                        @item.ToAddress
                                    </td>
                                    <td>
                                        @item.TransactionHash
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-body {
        padding-left: 0 !important;
        padding-top: 1rem;
        padding-right: 1rem;
    }

    .row > * {
        padding-right: 0 !important;
        padding-left: 0 !important;
    }

    #WithdrawTransactionRepository_filter {
        padding-right: 10px;
        padding-bottom: 10px;
    }

    .table > :not(caption) > * > * {
        padding: 0.5rem 0.5rem !important;
    }

</style>

<script src="/js/vendor/jquery.dataTables.min.js"></script>
<script src="/js/vendor/dataTables.bootstrap5.js"></script>
<script src="/js/vendor/dataTables.responsive.min.js"></script>
<script src="/js/vendor/responsive.bootstrap5.min.js"></script>

<script>
    $(document).ready(function () {
        $('#WithdrawTransactionRepository').DataTable({
            "order": [[0, "desc"]],
            "pageLength": 500,
            "paging": false,
            "language": {
                "info": "Showing _START_ to _END_ of _TOTAL_ pairs"
            },
            "dom": "frtip"
        });
    });
</script>