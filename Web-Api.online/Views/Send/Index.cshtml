@model List<Wallet>
@{
    ViewData["Title"] = "Send";
}

<h4>Balance:</h4>
<table id="balanceWalletsList" class="table table-striped table-centered mb-0">
    <thead>
        <tr>
            <th>Currency</th>
            <th>Balance</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.CurrencyAcronim
                </td>
                <td>
                    @item.Value
                </td>
                <td>
                    <p><a href="/Wallets">Create wallet</a></p>
                    <p><a href="/Send/Coins?Currency=@item.CurrencyAcronim">Send @item.CurrencyAcronim</a></p>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
